{
  "name": "hukibs-monorepo",
  "version": "1.0.0",
  "description": "Hukibs UI Component Library Monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter demo dev",
    "build": "pnpm --filter hukibs build && pnpm --filter docs build && pnpm --filter demo build",
    "build:lib": "pnpm --filter hukibs build",
    "build:docs": "pnpm --filter docs build",
    "build:demo": "pnpm --filter demo build",
    "typecheck": "pnpm --filter hukibs typecheck && pnpm --filter demo typecheck",
    "lint": "pnpm --filter hukibs lint && pnpm --filter demo lint",
    "test": "pnpm --filter hukibs test",
    "clean": "pnpm --filter hukibs clean && pnpm --filter docs clean && pnpm --filter demo clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build:lib && changeset publish"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}